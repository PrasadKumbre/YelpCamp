<% layout('./layouts/boilerplate') %>
<title>Yelpcamp | Add new Campground</title>
    <div class="row">
       <h1 class="text-center">New CampGround</h1>
       <div class="col-6 offset-3">
        <form action="/campgrounds" method="post" class="validated-form" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" name="campground[title]" id="title" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            </div>
            <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" name="campground[location]" id="location" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add images</label>
                <div id="preview" class="mt-3 d-flex flex-wrap gap-3"></div>
                <input class="form-control" type="file" name="image" id="image" required multiple accept="image/*">
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" name="campground[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Price">Price</label>
                <div class="input-group has-validation">
                    <span class="input-group-text" id="inputGroupPrepend">â‚¹</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-describedby="inputGroupPrepend" name="campground[price]" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <button class="btn btn-outline-success">Add CampGround</button>
        </form>
       </div>
    </div>