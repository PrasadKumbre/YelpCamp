<div class="card info-box shadow-sm border-0 p-3">
    <div class="card-body">
        <h4 class="card-title text-primary mb-3"><i class="bi bi-info-circle-fill me-2"></i>Campground
            Info</h4>
        <p class="text-muted mb-3">
            <%= campground.description %>
        </p>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><i class="bi bi-cash-coin me-2"></i>Price: <b>â‚¹<%= campground.price %></b></li>
            <li class="list-group-item"><i class="bi bi-person-fill me-2"></i>Creator: <b>
                    <%= campground.author.username %>
                </b></li>
            <li class="list-group-item"><i class="bi bi-calendar-event-fill me-2"></i>Created: <b>
                    <%= campground.updatedAt ? campground.createdAt.toLocaleDateString() : "N/A" %>
                </b></li>
        </ul>

        <% if(currentUser && campground.author.equals(currentUser._id)) { %>
            <div class="d-flex gap-3 mt-3">
                <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-outline-success rounded-3 w-100">
                    <i class="bi bi-pencil-fill me-1"></i>Edit
                </a>
                <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post" class="w-100">
                    <button class="btn btn-outline-danger rounded-3 w-100">
                        <i class="bi bi-trash-fill me-1"></i>Delete
                    </button>
                </form>
            </div>
            <% } %>
    </div>
</div>