<% layout('./layouts/boilerplate') %>
<title>Yelpcamp | <%= campground.title %> </title>
    <link rel="stylesheet" href="/css/star.css">
    <link rel="stylesheet" href="/css/campground.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <div class="container">
        <!-- Title -->
        <div class="text-center mb-4">
            <h1 class="display-4 fw-bold text-success">
                <%= campground.title %>
            </h1>
            <p class="text-muted fs-5"><i class="bi bi-geo-alt-fill me-1"></i>
                <%= campground.location %>
            </p>
        </div>

        <!-- Map and Carousel -->
        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <%- include('./includes/image') %>
            </div>
            <div class="col-md-6">
                <%- include('./includes/detailCard') %>
            </div>
        </div>

        <!-- Details + Reviews -->
        <div class="row g-4">
            <!-- Details Card -->
            <div class="col-md-6">
                <%- include('./includes/review') %>
            </div>

            <!-- Reviews -->
            <div class="col-md-6">
                <h4 class="card-title text-primary mb-3"><i class="bi bi-geo-alt-fill me-2"></i> Location on Map</h4>
                    <div id="map" class="shadow-sm border"></div>
            </div>
        </div>
    </div>

    <script>
        const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
        const campground = <%- JSON.stringify(campground) %>;
    </script>
    <script src="/js/showPageMap.js"></script>
        