<% layout('./layouts/boilerplate') %>

    <div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="alert alert-danger shadow-lg border border-danger rounded-4 p-4 w-100" style="max-width: 700px;">
            <div class="d-flex align-items-center mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor"
                    class="bi bi-exclamation-triangle-fill me-3" viewBox="0 0 16 16">
                    <path
                        d="M8.982 1.566a1.13 1.13 0 0 0-1.964 0L.165 13.233c-.457.778.091 1.767.982 1.767h13.706c.89 0 1.438-.99.982-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1-2.002 0 1 1 0 0 1 2.002 0z" />
                </svg>
                <h4 class="alert-heading mb-0">Error: <%= err.message %>
                </h4>
            </div>

            <p class="mb-3">Oops! Something went wrong. Please try again later or contact support if the issue persists.
            </p>

           <% if (process.env.NODE_ENV !== "production") { %>

            <!-- Visible and stylish button -->
            <button class="btn btn-danger btn-sm mb-2" type="button" data-bs-toggle="collapse"
                data-bs-target="#stackTrace" aria-expanded="false" aria-controls="stackTrace">
                Show Error Details
            </button>

            <div class="collapse" id="stackTrace">
                <pre class="bg-dark text-light rounded p-3 overflow-auto mt-2"
                    style="max-height: 300px;"><%= err.stack %></pre>
            </div>
            <% } %>
        </div>
    </div>